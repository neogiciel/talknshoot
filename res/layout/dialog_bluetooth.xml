<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:orientation="vertical"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:background="@color/back_dialog_color">
    
    <LinearLayout
 		android:id="@+id/layout1"
 		android:gravity="top"
       	android:layout_width="wrap_content"
        android:layout_height="wrap_content">

   			<TextView
           android:id="@+id/dialog_bluetooth_txt_titre"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:paddingLeft="12dp" 
           android:textSize="@dimen/txt_titre_size"
           android:textColor="@color/txt_titre_color"
           android:text="@string/dialog_bluetooth_txt_titre" />
      
    </LinearLayout>
    
     
    <LinearLayout
 		android:id="@+id/layout2"
 		android:orientation="vertical"
 		android:layout_below="@+id/layout1"
 		android:gravity="top"
       	android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
           android:id="@+id/dialog_bluetooth_txt_1"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:paddingLeft="12dp" 
           android:textSize="@dimen/txt_size"
           android:textColor="@color/txt_color"
           android:text="@string/dialog_bluetooth_txt_1" />
        
        <ImageView
        android:id="@+id/dialog_pix1"
    	android:layout_below="@+id/dialog_bluetooth_txt_1"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:src="@drawable/dialog_bluetooth" /> 
    	
        <TextView
           android:id="@+id/dialog_bluetooth_txt_2"
           android:layout_below="@+id/dialog_pix1"
           android:layout_width="wrap_content"
           android:layout_height="100dp"
           android:paddingLeft="12dp" 
           android:textSize="@dimen/txt_size"
           android:textColor="@color/txt_color"
           android:text="@string/dialog_bluetooth_txt_2" />
        
      
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/layout3"
       	android:layout_below="@+id/layout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true">
        
        <Button
        	android:id="@+id/btn_dialog_bluetooth"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:layout_weight="50"
        	android:padding="10dp"
        	android:textSize="@dimen/txt_button_size"
           	android:textColor="@color/btn_txt_color"
        	android:background="@drawable/android_button"
        	android:text="@string/btn_dialog_bluetooth"/>

    </LinearLayout>
    
</RelativeLayout>