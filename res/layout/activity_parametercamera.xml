<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="${relativePackage}.${activityClass}"
    android:background="@drawable/back_nav">

    <LinearLayout
        android:id="@+id/layout1"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingTop="2dp" >
 
        <TextView
           android:id="@+id/txt_titre"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:paddingLeft="12dp" 
           android:textSize="@dimen/txt_titre_size"
           android:textColor="@color/txt_titre_color"
           android:text="@string/parametercamera_txt_titre" />
  </LinearLayout>    
   <LinearLayout
       	android:id="@+id/layout2"
       	android:layout_below="@+id/layout1"
		android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp" >
 
      	  	<TextView
           android:id="@+id/parametercamera_txt_1"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:paddingLeft="12dp" 
           android:textSize="@dimen/txt_size"
           android:textColor="@color/txt_color"
           android:text="@string/parametercamera_txt_1" />
       
      	  	<TextView
           android:id="@+id/parametercamera_titre_txt_cameratype"
           android:layout_below="@+id/parametercamera_txt_1"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:paddingLeft="12dp" 
           android:textSize="@dimen/txt_sub_titre_size"
           android:textColor="@color/txt_sub_titre_color"
           android:text="@string/parametercamera_titre_txt_cameratype" />
      	  
		<TextView
           android:id="@+id/parametercamera_txt_cameratype"
           android:layout_below="@+id/parametercamera_titre_txt_cameratype"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:paddingLeft="12dp" 
           android:textSize="@dimen/txt_size"
           android:textColor="@color/txt_titre_color"
           android:text="waiting.." />
      	  			
      	  <TextView
           android:id="@+id/parametercamera_titre_txt_camerabrand"
           android:layout_below="@+id/parametercamera_titre_txt_cameratype"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:paddingLeft="12dp" 
           android:textSize="@dimen/txt_sub_titre_size"
           android:textColor="@color/txt_sub_titre_color"
           android:text="@string/parametercamera_titre_txt_camerabrand" />
      	
      	    <TextView
           android:id="@+id/parametercamera_txt_camerabrand"
           android:layout_below="@+id/parametercamera_titre_txt_camerabrand"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:paddingLeft="12dp" 
           android:textSize="@dimen/txt_size"
           android:textColor="@color/txt_titre_color"
           android:text="waiting.." />
      	  
      	  <TextView
           android:id="@+id/parametercamera_titre_txt_wifiname"
           android:layout_below="@+id/parametercamera_txt_camerabrand"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:paddingLeft="12dp" 
           android:textSize="@dimen/txt_sub_titre_size"
           android:textColor="@color/txt_sub_titre_color"
           android:text="@string/parametercamera_titre_txt_wifiname" />
      	  
      	  
      	    <TextView
           android:id="@+id/parametercamera_txt_wifiname"
           android:layout_below="@+id/parametercamera_titre_txt_wifiname"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:paddingLeft="12dp" 
           android:textSize="@dimen/txt_size"
           android:textColor="@color/txt_titre_color"
           android:text="waiting.." />
      	

      	    <TextView
           android:id="@+id/parametercamera_titre_txt_wifipassword"
           android:layout_below="@+id/parametercamera_txt_wifiname"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:paddingLeft="12dp" 
           android:textSize="@dimen/txt_sub_titre_size"
           android:textColor="@color/txt_sub_titre_color"
           android:text="@string/parametercamera_titre_txt_wifipassword" />
      	
      	    
      	    <TextView
           android:id="@+id/parametercamera_txt_wifipassword"
           android:layout_below="@+id/parametercamera_titre_txt_wifipassword"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:paddingLeft="12dp" 
           android:textSize="@dimen/txt_size"
           android:textColor="@color/txt_titre_color"
           android:text="waiting.." />
      	
      	  
      	  	  
   	</LinearLayout>    
</RelativeLayout>
