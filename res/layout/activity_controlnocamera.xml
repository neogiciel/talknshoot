<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="${relativePackage}.${activityClass}"
    android:background="@drawable/back_nav">

    <LinearLayout
        android:id="@+id/layout1"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingTop="2dp" >
 
        <TextView
           android:id="@+id/txt_titre"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="@string/controlnocamera_txt_titre"
           android:paddingLeft="12dp" 
           android:textSize="@dimen/txt_titre_size"
           android:textColor="@color/txt_titre_color" />
  </LinearLayout>  
  
     <LinearLayout
        android:id="@+id/layout2"
        android:layout_below="@+id/layout1"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingTop="4dp" >
 
        <TextView
           android:id="@+id/txt_1"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="@string/controlnocamera_txt_1"
           android:paddingLeft="12dp" 
           android:textSize="@dimen/txt_size"
           android:textColor="@color/txt_color" />
  </LinearLayout>  
    
   <LinearLayout
       	android:id="@+id/layout3"
       	android:layout_below="@+id/layout2"
		android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingTop="12dp" >
 
       
       <Button
        	android:id="@+id/btn_controlnocamera_add"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:layout_weight="50"
        	android:padding="10dp"
        	android:textSize="@dimen/txt_button_size"
           	android:textColor="@color/btn_txt_color"
        	android:background="@drawable/android_button"
        	android:text="@string/btn_controlnocamera_add"/>

         <Button
        	android:id="@+id/btn_controlnocamera_back"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:layout_weight="50"
        	android:padding="10dp"
        	android:textSize="@dimen/txt_button_size"
           	android:textColor="@color/btn_txt_color"
        	android:background="@drawable/android_button"
        	android:text="@string/btn_controlnocamera_back"/>
       
    </LinearLayout>
    
    <LinearLayout
       	android:id="@+id/layout4"
       	android:layout_below="@+id/layout3"
		android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingTop="4dp" >
         
         <ImageView
        android:id="@+id/controlchoise_img_wifi"
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:src="@drawable/pix_control_nocamera" /> 
   		
     </LinearLayout>
      
</RelativeLayout>
