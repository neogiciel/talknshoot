<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="${relativePackage}.${activityClass}"
    android:background="@drawable/back_nav">

    <LinearLayout
        android:id="@+id/layout1"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingTop="2dp" >
 
        <TextView
           android:id="@+id/txt_titre"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:paddingLeft="12dp" 
           android:textSize="@dimen/txt_titre_size"
           android:textColor="@color/txt_titre_color"
           android:text="@string/add4_password_txt_titre" />
  </LinearLayout>    
  
      		
   <LinearLayout
       	android:id="@+id/layout2"
       	android:layout_below="@+id/layout1"
		android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp" >
 
             	 <TextView
           android:id="@+id/add4_password_txt_subtitre"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:paddingLeft="12dp" 
           android:textSize="@dimen/txt_sub_titre_size"
           android:textColor="@color/txt_sub_titre_color"
           android:text="@string/add4_password_txt_subtitre" />
             	 
      	  <EditText
           android:id="@+id/add4_password_edittxt"
           android:layout_below="@+id/add4_password_txt_subtitre"
           android:layout_width="260dip"
           android:layout_height="wrap_content"
           android:paddingLeft="20dp"
           android:paddingTop="12dp"
           android:background="@drawable/android_edit" 
           android:textSize="@dimen/txt_size"
           android:textColor="@color/txt_edit_color"
           android:ems="10" >
			<requestFocus />
			</EditText>

      	  
             	 <Button
        	android:id="@+id/btn_add4_password_start"
			android:layout_below="@+id/add4_password_edittxt_subtitre"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:padding="10dp"
        	android:layout_gravity="center_horizontal"
        	android:textSize="@dimen/txt_button_size"
           	android:textColor="@color/btn_txt_color"
        	android:background="@drawable/android_button"
        	android:text="@string/btn_add4_password_start"/>
               	  			
 
		     
   	</LinearLayout>
   
    	
</RelativeLayout>
