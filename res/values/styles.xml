<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light.NoTitleBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    
    <style name="FuturaBk" parent="@android:style/TextAppearance.Medium">
    <item name="android:layout_width">fill_parent</item>
    <item name="android:layout_height">wrap_content</item>
     <item name="android:textColor">#FF0000</item>
    <item name="android:textSize">20pt</item>
    <item name="fontFamily">FtraBk__</item>
   </style>
   
   <style name="FuturaMd" parent="@android:style/TextAppearance.Medium">
    <item name="android:layout_width">fill_parent</item>
    <item name="android:layout_height">wrap_content</item>
     <item name="android:textColor">#F2BAD0</item>
    <item name="android:textSize">11pt</item>
   
    <item name="fontFamily">FtraMd__</item>
   </style>
   
   <style name="FuturaLt" parent="@android:style/TextAppearance.Medium">
    <item name="android:layout_width">fill_parent</item>
    <item name="android:layout_height">wrap_content</item>
     <item name="android:textColor">#F2BAD0</item>
    <item name="android:textSize">11pt</item>
    <item name="fontFamily">FtraLt__</item>
   </style>
    
   
    
</resources>
